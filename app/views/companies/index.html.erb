<h1>Companies</h1>

<div class="media">
  <div class="media-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Manager</th>
          <th>Status</th>
          <th>Terms</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <%= render @companies %>
      </tbody>
    </table>
  </div>
</div>
<br>

<h3>Import Companies</h3>
<%= form_tag import_companies_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Upload Companies" %>
<% end %>

<h3>Download File</h3>
<%= link_to "Report", companies_path(format: "csv"), class: 'btn btn-secondary' %>

<%= link_to 'New Company', new_company_path, class: 'btn btn-primary' %>
